   doi = {10.3389/fphar.2019.00619},
   issn = {16639812},
   issue = {JUN},
   journal = {Frontiers in Pharmacology},
   keywords = {CFTR,Interactome,Membrane traffic,Network biology,Plasma membrane},
   title = {Network biology identifies novel regulators of CFTR trafficking and membrane stability},
   volume = {10},
